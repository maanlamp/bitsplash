{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"exactOptionalPropertyTypes": true,
		"target": "esnext",
		"module": "esnext",
		"incremental": true,
		"outDir": "dist",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"importHelpers": true,
		"lib": ["dom", "esnext"],
		"moduleResolution": "NodeNext",
		"sourceMap": true
	},
	"include": ["./src"]
}
